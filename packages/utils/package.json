{
  "name": "@vibechecc/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for the vibechecc workspace",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.mjs",
      "require": "./dist/tailwind.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/tailwind.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/tailwind.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "clsx": "*",
    "tailwind-merge": "*"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
