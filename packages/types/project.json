{
  "name": "@vibechecc/types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/types/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup src/index.ts --format cjs,esm && bunx tsc --project tsconfig.build.json --emitDeclarationOnly",
        "cwd": "packages/types"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup src/index.ts --format cjs,esm --dts --watch",
        "cwd": "packages/types"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "packages/types"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/types"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  },
  "tags": ["type:lib", "scope:shared"]
}
