{
  "include": [],
  "files": [],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/convex"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/utils"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@viberatr/convex": ["./apps/convex"],
      "@viberatr/convex/*": ["./apps/convex/*"],
      "@viberatr/types": ["./packages/types/src"],
      "@viberatr/types/*": ["./packages/types/src/*"],
      "@viberatr/utils": ["./packages/utils/src"],
      "@viberatr/utils/*": ["./packages/utils/src/*"],
      "@viberatr/web": ["./apps/web"],
      "@viberatr/web/*": ["./apps/web/*"]
    }
  },
  "exclude": ["vitest.setup.ts", "node_modules", "dist", ".output"]
}
