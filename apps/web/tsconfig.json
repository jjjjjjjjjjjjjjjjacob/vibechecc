{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@vibechecc/convex": ["../convex/convex/_generated/api.d.ts"],
      "@vibechecc/convex/dataModel": [
        "../convex/convex/_generated/dataModel.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite-env.d.ts",
    "../convex/convex/_generated/api.d.ts",
    "../convex/convex/_generated/dataModel.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".output",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vite.config.ts",
    "../convex/convex/**/*.ts",
    "../convex/convex/**/*.tsx"
  ]
}
