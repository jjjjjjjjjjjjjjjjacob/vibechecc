{
  "name": "@vibechecc/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web",
  "inputs": ["@vibechecc/convex", "@vibechecc/types"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run dev",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run build",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/.output", "{projectRoot}/.tanstack"],
      "dependsOn": ["^build", "convex:build"],
      "inputs": [
        "production",
        "^production",
        { "env": "VITE_APP_NAME" },
        { "env": "VITE_APP_DOMAIN" },
        { "env": "VITE_APP_TWITTER_HANDLE" },
        { "env": "VITE_CONVEX_URL" },
        { "env": "VITE_CLERK_PUBLISHABLE_KEY" },
        { "env": "VITE_POSTHOG_API_KEY" },
        { "env": "VITE_POSTHOG_API_HOST" },
        { "env": "VITE_POSTHOG_PROJECT_ID" },
        { "env": "VITE_POSTHOG_REGION" }
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run preview",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun vitest run",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun vitest",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "project": "{projectRoot}",
        "config": "./eslint.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun tsc --noEmit --project tsconfig.json",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["^build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun wrangler:deploy",
        "cwd": "{projectRoot}"
      }
    },
    "deploy:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun wrangler:dev",
        "cwd": "{projectRoot}"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf .turbo node_modules dist",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:app", "platform:web"]
}
