{
  "name": "viberatr",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --parallel=true --projects=@viberatr/web,@viberatr/convex",
    "dev:frontend": "nx dev @viberatr/web",
    "dev:backend": "nx dev @viberatr/convex",
    "dev:webhooks": "bunx svix listen https://127.0.0.1:3210/webhooks/clerk",
    "seed": "bunx convex run seed:seed",
    "seed:clear": "bunx convex run seed:clear",
    "build": "nx run-many --target=build --parallel=true --projects=@viberatr/web,@viberatr/convex,@viberatr/types",
    "test": "nx run-many --parallel=true --target=test --projects=@viberatr/web,@viberatr/convex",
    "test:watch": "nx run browser:test:watch",
    "lint": "nx run-many --target=lint",
    "format": "prettier --write .",
    "lint:fix": "nx run-many --target=lint --fix",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --cache --ignore-unknown",
    "typecheck": "nx run-many --target=typecheck",
    "quality": "bun run typecheck && bun run lint && bun run format:check",
    "quality:fix": "bun run typecheck && bun run lint:fix && bun run format",
    "deploy": "bun run build && bun run wrangler:deploy",
    "cf-typegen": "wrangler types --env-interface Env",
    "clean": "nx run-many --target=clean --parallel=true --projects=@viberatr/web,@viberatr/convex,@viberatr/types"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@happy-dom/global-registrator": "^17.5.6",
    "@nx/eslint": "^21.2.2",
    "@nx/react": "^21.2.2",
    "@nx/vite": "^21.2.2",
    "@nx/web": "^21.2.2",
    "@nx/workspace": "^21.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "nx": "^21.2.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cmdk": "^1.1.1",
    "framer-motion": "^12.23.6",
    "geist": "^1.4.2",
    "react-intersection-observer": "^9.16.0"
  }
}
